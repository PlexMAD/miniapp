generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model gameCategories {
  id             Int     @id @default(autoincrement())
  title          String
  hiddenCategory Boolean
  games          games[] @relation("CategoryGames")
}

model games {
  id             Int     @id @default(autoincrement())
  title          String
  description    String
  gameCategoryId Int
  premiumStatus  Boolean
  configId       Int
  slug           String

  category gameCategories @relation("CategoryGames", fields: [gameCategoryId], references: [id])
  cards    cards[]        @relation("GameCards")
  config   gameConfigs    @relation(fields: [configId], references: [id])
}

model userStatuses {
  id    Int     @id @default(autoincrement())
  title String
  users users[]
}

model users {
  id         Int      @id @default(autoincrement())
  name       String
  statusId   Int
  created_at DateTime @default(now())

  status userStatuses @relation(fields: [statusId], references: [id])
}

model cards {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  gameId      Int

  game games @relation("GameCards", fields: [gameId], references: [id])
}

model gameConfigs {
  id            Int     @id @default(autoincrement())
  cardSelection String
  turnTime      Int?
  games         games[]
}
